<%- contentFor('header') %>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
<script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<link href="css/bootstrap-editable.css" rel="stylesheet">
<script src="js/bootstrap-editable.js"></script>
<style>
  table td{
    min-width: 150px;
  }

  table tr{
    height: 55px;
  }

  .editableform .control-group {
    line-height: 36px;
  }

  table a{
    color: white;
  }
</style>

<%- contentFor('pageContent') %>
<div class="container" style="padding: 200px 10px 200px 10px; color: white !important">
  <div class="col-md-8 offset-md-2">
    <div>
      <h2>INFORMATIONS PERSONNELLES</h2>
      <br><br><br><br><br><br>
      <h5>Cliquez sur vos informations pour les modifier</h5><br><br>
    </div>
    <div>
      <table>
        <tr>
          <td>
            Pseudo :
          </td>
          <td>
            <a href="#" id="pseudo" data-type="text" data-pk="1" data-url="/edit-user" data-title="Enter username"><%= user.pseudo %></a>
          </td>
        </tr>
        <tr>
          <td>
            Email :
          </td>
          <td>
            <a href="#" id="email" data-type="text" data-pk="1" data-url="/edit-user" data-title="Enter username"><%= user.email %></a>
          </td>
        </tr>
        <tr>
          <td>
            Mot de passe :
          </td>
          <td>
            <a href="#" id="password" data-type="text" data-pk="1" data-url="/edit-user" data-title="Enter username"><%= user.password %></a>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>

<script>
  $.fn.editable.defaults.mode = 'inline';
  $(document).ready(function() {
    $('table a').editable();
  });
</script>
